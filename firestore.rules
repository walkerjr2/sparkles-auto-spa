rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    // You can customize this based on your admin setup
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email in [
               'sparklesautospa01@gmail.com',
               'jrcosroy.walker@gmail.com'
             ];
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'jrcosroy.walker@gmail.com';
    }
    
    // Bookings collection
    // - Users can read their own bookings
    // - Users can create bookings
    // - Only admins can update/delete bookings
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // Workers collection
    // - Everyone can read workers (needed for booking page)
    // - Only admins can create, update, or delete workers
    match /workers/{workerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Audit logs collection
    // - Only authenticated users can write logs (system logging)
    // - Only super admin can read logs
    match /audit_logs/{logId} {
      allow read: if isSuperAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Logs should never be modified or deleted
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
